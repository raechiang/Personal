<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/blank_t0_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/text_startTime"
        android:textSize="@dimen/text_size_title_display"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/blank_t0_minutes_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_size_large_display"
        app:layout_constraintEnd_toStartOf="@+id/blank_t0_minutes_unit_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blank_t0_text_view" />

    <TextView
        android:id="@+id/blank_t0_minutes_unit_text_view"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="@string/text_unit_minutes"
        android:textSize="@dimen/text_size_med_display"
        app:layout_constraintBottom_toBottomOf="@+id/blank_t0_minutes_text_view"
        app:layout_constraintEnd_toStartOf="@+id/blank_t0_seconds_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/blank_t0_minutes_text_view"
        app:layout_constraintTop_toTopOf="@+id/blank_t0_minutes_text_view" />

    <TextView
        android:id="@+id/blank_t0_seconds_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large_display"
        app:layout_constraintBottom_toBottomOf="@+id/blank_t0_minutes_unit_text_view"
        app:layout_constraintEnd_toStartOf="@+id/blank_t0_seconds_unit_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/blank_t0_minutes_unit_text_view"
        app:layout_constraintTop_toTopOf="@+id/blank_t0_minutes_unit_text_view" />

    <TextView
        android:id="@+id/blank_t0_seconds_unit_text_view"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/text_unit_seconds"
        android:textSize="@dimen/text_size_med_display"
        app:layout_constraintBottom_toBottomOf="@+id/blank_t0_seconds_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/blank_t0_seconds_text_view"
        app:layout_constraintTop_toTopOf="@+id/blank_t0_seconds_text_view" />

</android.support.constraint.ConstraintLayout>