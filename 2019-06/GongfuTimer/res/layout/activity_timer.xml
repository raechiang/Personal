<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TimerActivity">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timer_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="(title)"
        android:textSize="@dimen/text_size_title_display"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main" />

    <ImageView
        android:id="@+id/timer_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/timer_name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
         />

    <ProgressBar
        android:id="@+id/timer_progress_indicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="?android:attr/progressBarStyle"
        android:indeterminateDrawable="@drawable/circle_prog_test"
        app:layout_constraintTop_toBottomOf="@id/timer_name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <RelativeLayout
        android:id="@+id/timer_remaining_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_image_view">
        <TextView
            android:id="@+id/timer_remaining_min_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/timer_remaining_colon_text_view"
            android:layout_toStartOf="@id/timer_remaining_colon_text_view"
            android:layout_alignBaseline="@id/timer_remaining_colon_text_view"
            android:text="@string/text_initial_zeroes"
            android:textSize="@dimen/text_size_large_display"
            android:textAlignment="textEnd"
            android:layout_gravity="end"/>
        <TextView
            android:id="@+id/timer_remaining_colon_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=":"
            android:textSize="@dimen/text_size_large_display"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/timer_remaining_sec_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/timer_remaining_colon_text_view"
            android:layout_toEndOf="@id/timer_remaining_colon_text_view"
            android:layout_alignBaseline="@id/timer_remaining_colon_text_view"
            android:text="@string/text_initial_zeroes"
            android:textSize="@dimen/text_size_large_display"
            android:textAlignment="textStart"
            android:layout_gravity="start"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/timer_increment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="+00:00"
        android:textSize="@dimen/text_size_med_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer_remaining_layout" />

    <TextView
        android:id="@+id/timer_iteration_of_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="i / r"
        android:textSize="@dimen/text_size_med_display"
        app:layout_constraintEnd_toStartOf="@+id/timer_iteration_plus"
        app:layout_constraintRight_toLeftOf="@+id/timer_iteration_plus"
        app:layout_constraintTop_toBottomOf="@+id/timer_remaining_layout" />

    <ImageButton
        android:id="@+id/timer_iteration_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_add_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timer_iteration_of_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/timer_iteration_of_text_view" />

    <ImageButton
        android:id="@+id/timer_iteration_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_remove_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/timer_iteration_of_text_view"
        app:layout_constraintRight_toLeftOf="@id/timer_iteration_of_text_view"
        app:layout_constraintTop_toTopOf="@+id/timer_iteration_of_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/timer_iteration_of_text_view" />

    <Button
        android:id="@+id/timer_toggle_notes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="toggleNotes"
        app:layout_constraintTop_toBottomOf="@id/timer_iteration_of_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/show_notes" />

    <TextView
        android:id="@+id/timer_notes_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="80dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/timer_toggle_notes_button"
        android:textSize="@dimen/text_size_small_display" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timer_pause_play_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginBottom="@dimen/padding_16"
        android:onClick="pauseplayButtonClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timer_reset_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/padding_16"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginBottom="@dimen/padding_16"
        android:onClick="resetButtonClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_replay_black_24dp" />

</android.support.constraint.ConstraintLayout>