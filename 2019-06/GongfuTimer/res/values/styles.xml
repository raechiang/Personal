<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkGreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="primaryButtonTheme">
            @style/Widget.Button.Primary
        </item>
        <item name="colorPrimary">@color/darkGreenColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkGreenColorPrimaryDark</item>
        <item name="primaryTextColor">@color/darkGreenPrimaryText</item>
        <item name="colorAccent">@color/darkGreenButtonNormal</item>
        <item name="windowBackground">@color/darkGreenWindowBackground</item>
        <item name="buttonNormalColor">@color/darkGreenButtonNormal</item>
        <item name="buttonHighlightColor">@color/darkGreenButtonHighlight</item>
        <item name="buttonTextColor">@color/darkGreenButtonText</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">?attr/buttonHighlightColor</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>
</resources>
