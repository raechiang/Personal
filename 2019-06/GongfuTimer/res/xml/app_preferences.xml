<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="General">

        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="alert_notification"
            android:title="Enable Alerts"
            android:summary="Turn on or off sound notifications"
            android:defaultValue="true" />

        <android.support.v7.preference.Preference
            android:key="feedback"
            android:title="Send Feedback"
            android:summary="Report technical issues or suggest new features." />

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="Saved Timers">

        <android.support.v7.preference.Preference
            android:key="@string/restore_defaults_key"
            android:title="Restore Default Timers"
            android:summary="Add original timers to saved timers">
            <intent
                android:targetPackage="com.rae.gongfutimer_v1"
                android:targetClass="com.rae.gongfutimer_v1.activities.LoadConfigActivity">
                <extra
                    android:name="@string/load_action_extra"
                    android:value="-3"
                    />
                <extra
                    android:name="@string/position_extra"
                    android:value="-1"
                    />
            </intent>
        </android.support.v7.preference.Preference>

        <android.support.v7.preference.Preference
            android:key="@string/delete_defaults_key"
            android:title="Delete Default Timers"
            android:summary="Delete original timers from saved timers">
            <intent
                android:targetPackage="com.rae.gongfutimer_v1"
                android:targetClass="com.rae.gongfutimer_v1.activities.LoadConfigActivity">
                <extra
                    android:name="@string/load_action_extra"
                    android:value="-2"
                    />
                <extra
                    android:name="@string/position_extra"
                    android:value="-3"
                    />
            </intent>
        </android.support.v7.preference.Preference>

        <com.rae.gongfutimer_v1.preferences.DeleteDialogPreference
            android:key="@string/delete_all_key"
            android:title="Delete All Timers"
            android:summary="Delete all timers from saved timers"
            android:dialogTitle=""
            android:dialogMessage="Permanently delete all timers?"
            android:positiveButtonText="Confirm"
            android:negativeButtonText="Cancel" />

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>
