<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.rae.gongfutimer_v2" >
  <application
    android:allowBackup="true"
      android:label="@string/app_name"
    android:icon="@drawable/ic_gongfutimer01"
    android:supportsRtl="true"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">
    <activity android:name=".activities.LoadConfigActivity"
      android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".activities.SaveConfigActivity" />
    <activity android:name=".activities.SettingsActivity" />
    <activity android:name=".activities.TimerActivity" />
  </application>
</manifest>