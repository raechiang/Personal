<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rae.gongfutimer_v1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activities.LoadConfigActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.BlankConfigActivity"></activity>
        <activity android:name=".activities.SaveConfigActivity"></activity>
        <activity android:name=".activities.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activities.TimerActivity"></activity>
    </application>

</manifest>